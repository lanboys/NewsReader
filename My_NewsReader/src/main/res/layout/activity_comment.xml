<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ib_comment_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_btn_back"
            android:src="@drawable/news_title_back"
            />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_comment_display"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="12dp">

        <EditText
            android:id="@+id/et_comment_reply_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableBottom="@drawable/bg_edit_text"
            android:drawableLeft="@drawable/icon_edit_icon"
            android:drawablePadding="2dp"
            android:hint="写跟贴"
            android:textColorHint="@color/colorGray"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_comment_send_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送"
            android:textColor="@color/colorGray"/>
    </LinearLayout>

</LinearLayout>
