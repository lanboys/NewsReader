<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ib_news_title_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_btn_back"
            android:src="@drawable/news_title_back"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/ib_news_title_setting"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_btn_back"
            android:src="@drawable/news_title_menu"
            />
    </LinearLayout>

    <WebView
        android:id="@+id/wv_news_detail_webView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="12dp">

        <EditText
            android:id="@+id/et_news_detail_reply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@drawable/icon_edit_icon"
            android:drawablePadding="2dp"
            android:hint="写跟贴"
            android:textColorHint="@color/colorPrimary"
            android:textSize="14sp"
            />
        <!--android:drawableBottom="@drawable/bg_edit_text"-->
        <TextView
            android:id="@+id/tv_news_detail_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:drawableLeft="@drawable/icon_message"
            android:drawablePadding="5dp"
            android:text="899"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/iv_news_detail_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/news_article_share_icon"/>

        <TextView
            android:id="@+id/tv_news_detail_send_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送"
            android:textColor="@color/colorPrimary"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>
