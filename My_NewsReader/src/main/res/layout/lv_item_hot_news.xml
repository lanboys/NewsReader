<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    tools:background="#71e9bf">

    <ImageView
        android:id="@+id/iv_item_pic"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginRight="8dp"
        android:contentDescription="@string/image_desc"
        android:scaleType="fitXY"
        android:src="@drawable/icon_default"/>

    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/iv_item_pic"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="#000"
        android:textSize="16sp"
        tools:text="河南一官员受贿后修无座庙宇 办公室里供奉着佛像办公室里供奉着佛像办公室里供奉着佛像"/>

    <TextView
        android:id="@+id/tv_item_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_item_pic"
        android:layout_toRightOf="@id/iv_item_pic"
        android:textColor="#000"
        android:textSize="12sp"
        tools:text="新闻热点"/>

    <TextView
        android:id="@+id/tv_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_item_pic"
        android:layout_alignParentRight="true"
        android:textColor="#000"
        android:textSize="12sp"
        android:visibility="gone"
        tools:text="1753跟帖"/>

    <TextView
        android:id="@+id/tv_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_item_pic"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        tools:text="置顶"/>

</RelativeLayout>